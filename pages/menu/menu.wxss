.index-right-cell {
  background-color: white;
  margin-top: 10rpx;
  padding: 0rpx;
  flex-direction: row;
  display: flex;
  /* height: 80px; */
  width: 100%;
}

.food-image {
  width: 70px;
  height: 70px;
  justify-content: flex-start;
  margin-left: 30rpx;
  border: 0rpx solid lightgrey;
}

.food-desc {
  width: 100px;
  display: flex;
  /* background-color: yellow; */
  flex-direction: column;
  justify-content: center;
  padding-left: 10px;
}

.food-name {
  font-size: 16px;
}

.food-label {
  font-size: 14px;
  color: gray;
}

.food-price {
  display: flex;
  font-size: 14px;
  color: red;
  margin-top: 5rpx;
  /* justify-content:flex-end; *//* align-items: flex-end; */
}

.change-action {
  display: flex;
  width: 100px;
  flex-direction: row;
  /* float:right; *//* background-color: red; */
  text-align: right;
  align-self: flex-end;
  margin-right: 10px;
  justify-content: flex-end;
}

.add-icon {
  width: 20px;
  height: 20px;
  /* display: flex;
  justify-content: flex-end; *//* justify-content: flex-end;
  align-items: flex-end;
  margin-top: 45px;
  margin-left: 50px; */
}

.remove-icon {
  width: 20px;
  height: 20px;
  /* display: none; */
}

.change-num {
  /* display: none; */
  font-size: 14px;
  align-self: center;
}

